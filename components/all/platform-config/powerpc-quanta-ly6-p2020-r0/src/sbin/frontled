cur_dir=$(dirname $0)
if [ -x $cur_dir/functions ]; then
	. $cur_dir/functions
else
	echo "$cur_dir/functions not found"
	exit 1
fi

usage() {
    echo "Two parameters <devices {fan|psu1|psu2}> and <led color {green|red|off}> required"
}

case $1 in
    psu1)
        offset=0
        ;;

    psu2)
        offset=2
        ;;

    fan)
        offset=4
        ;;

    *)
        usage
        exit 1
        ;;
esac

case $2 in
    green)
        p1=1
        p2=0
        ;;

    red)
        p1=0
        p2=1
        ;;
    off)
        p1=0
        p2=0
        ;;

    *)
        usage
        exit 1
        ;;
esac

p12_offset=10
pca9555_26=$(gpio_find 26)
pca9555_26p12=$(($pca9555_26 + $p12_offset))
gpio1=$(($pca9555_26p12 + $offset))
gpio2=$(($gpio1 + 1))

gpio_set $gpio1 $p1
gpio_set $gpio2 $p2

exit 0
