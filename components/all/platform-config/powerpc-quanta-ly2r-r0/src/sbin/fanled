cur_dir=$(dirname $0)
if [ -x $cur_dir/functions ]; then
	. $cur_dir/functions
else
	echo "$cur_dir/functions not found"
	exit 1
fi

usage() {
    echo "Two parameters <devices {fan1|fan2|fan3}> and <led color {red|off}> required"
}

case $1 in
    1|fan1)
        offset=0
        ;;

    2|fan2)
        offset=1
        ;;

    3|fan3)
        offset=2
        ;;

    *)
        usage
        exit 1
        ;;
esac

case $2 in
    1|red)
        p=1
        ;;
    0|off)
        p=0
        ;;

    *)
        usage
        exit 1
        ;;
esac

pca9555_26=$(gpio_find 26)
pca9555_26p14=$(($pca9555_26 + $pca953x_p14))
gpio=$(($pca9555_26p14 + $offset))

gpio_set $gpio $p

exit 0
