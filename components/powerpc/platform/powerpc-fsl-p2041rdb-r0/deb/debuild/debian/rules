DEB_DH_INSTALL_SOURCEDIR = debian/tmp
INSTALL_DIR = $(CURDIR)/$(DEB_DH_INSTALL_SOURCEDIR)
PLATFORM=powerpc-fsl-p2041rdb-r0

%:
	dh $@

build-arch:
	dh build-arch

clean:
	dh clean

override_dh_auto_install:
	mkdir -p $(INSTALL_DIR)/usr/platforms/$(PLATFORM)
	cp ../../onl.$(PLATFORM).loader $(INSTALL_DIR)/usr/platforms/$(PLATFORM)/onl.$(PLATFORM).loader


